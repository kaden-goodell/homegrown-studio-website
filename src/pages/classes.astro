---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export const prerender = false; // This page must be server-rendered
---

<Layout
	title="Current Classes - Homegrown Studio"
	description="Browse our current craft classes and workshops. Book your spot today!"
>
	<Header />

	<main>
		<!-- Hero Section -->
		<section class="page-hero">
			<div class="container">
				<h1>Current Classes</h1>
				<p class="subtitle">Explore our upcoming craft classes and workshops</p>
			</div>
		</section>

		<!-- Filters Section -->
		<section class="filters-section">
			<div class="container">
				<div class="filters">
					<div class="filter-group">
						<label for="date-filter">Filter by Date:</label>
						<select id="date-filter">
							<option value="all">All Dates</option>
							<option value="today">Today</option>
							<option value="week">This Week</option>
							<option value="month">This Month</option>
						</select>
					</div>

					<div class="filter-group">
						<label for="sort-filter">Sort by:</label>
						<select id="sort-filter">
							<option value="date">Date</option>
							<option value="name">Name</option>
							<option value="price">Price</option>
						</select>
					</div>

					<button id="refresh-btn" class="button-secondary">
						<span>â†»</span> Refresh
					</button>
				</div>
			</div>
		</section>

		<!-- Classes Grid -->
		<section class="classes-section">
			<div class="container">
				<div id="loading" class="loading">
					<div class="spinner"></div>
					<p>Loading classes...</p>
				</div>

				<div id="error" class="error" style="display: none;">
					<p>Failed to load classes. Please try again.</p>
					<button id="retry-btn" class="button">Retry</button>
				</div>

				<div id="classes-grid" class="classes-grid" style="display: none;">
					<!-- Classes will be dynamically inserted here -->
				</div>

				<div id="no-classes" style="display: none;" class="no-classes">
					<p>No classes available at the moment. Check back soon!</p>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>

<style>
	.page-hero {
		background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
		color: white;
		padding: var(--spacing-xl) 0;
		text-align: center;
	}

	.page-hero h1 {
		font-size: 3rem;
		margin-bottom: var(--spacing-sm);
		color: white;
	}

	.subtitle {
		font-size: 1.5rem;
		opacity: 0.95;
	}

	.filters-section {
		background: var(--color-bg-light);
		padding: var(--spacing-md) 0;
		border-bottom: 1px solid #e5e7eb;
	}

	.filters {
		display: flex;
		gap: var(--spacing-md);
		align-items: center;
		flex-wrap: wrap;
	}

	.filter-group {
		display: flex;
		align-items: center;
		gap: var(--spacing-xs);
	}

	.filter-group label {
		font-weight: 600;
		color: var(--color-text);
	}

	.filter-group select {
		padding: var(--spacing-xs) var(--spacing-sm);
		border: 2px solid var(--color-primary);
		border-radius: 0.375rem;
		background: white;
		color: var(--color-text);
		font-size: 1rem;
		cursor: pointer;
	}

	.button-secondary {
		padding: var(--spacing-xs) var(--spacing-md);
		background: white;
		border: 2px solid var(--color-primary);
		color: var(--color-primary);
		border-radius: 0.5rem;
		font-weight: 600;
		cursor: pointer;
		display: flex;
		align-items: center;
		gap: 0.5rem;
		transition: all 0.2s;
	}

	.button-secondary:hover {
		background: var(--color-primary);
		color: white;
	}

	.button-secondary span {
		font-size: 1.25rem;
		display: inline-block;
	}

	.classes-section {
		padding: var(--spacing-xl) 0;
		min-height: 400px;
	}

	.loading {
		text-align: center;
		padding: var(--spacing-xl) 0;
	}

	.spinner {
		width: 50px;
		height: 50px;
		margin: 0 auto var(--spacing-md);
		border: 4px solid var(--color-bg-light);
		border-top: 4px solid var(--color-primary);
		border-radius: 50%;
		animation: spin 1s linear infinite;
	}

	@keyframes spin {
		0% { transform: rotate(0deg); }
		100% { transform: rotate(360deg); }
	}

	.error {
		text-align: center;
		padding: var(--spacing-xl);
		color: #dc2626;
	}

	.classes-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
		gap: var(--spacing-lg);
	}

	.class-card {
		background: white;
		border-radius: 1rem;
		overflow: hidden;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
		transition: transform 0.2s, box-shadow 0.2s;
		border: 2px solid transparent;
	}

	.class-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
		border-color: var(--color-primary);
	}

	.class-image {
		width: 100%;
		height: 200px;
		object-fit: cover;
		background: var(--color-bg-light);
	}

	.class-image-placeholder {
		width: 100%;
		height: 200px;
		background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		font-size: 3rem;
	}

	.class-content {
		padding: var(--spacing-md);
	}

	.class-title {
		font-size: 1.25rem;
		font-weight: 700;
		color: var(--color-text);
		margin-bottom: var(--spacing-xs);
	}

	.class-description {
		color: var(--color-text-light);
		margin-bottom: var(--spacing-md);
		line-height: 1.6;
	}

	.class-footer {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding-top: var(--spacing-sm);
		border-top: 1px solid #e5e7eb;
	}

	.class-price {
		font-size: 1.5rem;
		font-weight: 700;
		color: var(--color-primary);
	}

	.book-btn {
		padding: var(--spacing-xs) var(--spacing-md);
		background: var(--color-primary);
		color: white;
		border: none;
		border-radius: 0.5rem;
		font-weight: 600;
		cursor: pointer;
		transition: background 0.2s;
	}

	.book-btn:hover {
		background: var(--color-primary-dark);
	}

	.no-classes {
		text-align: center;
		padding: var(--spacing-xl);
		color: var(--color-text-light);
		font-size: 1.125rem;
	}

	@media (max-width: 768px) {
		.page-hero h1 {
			font-size: 2rem;
		}

		.subtitle {
			font-size: 1.125rem;
		}

		.filters {
			flex-direction: column;
			align-items: stretch;
		}

		.filter-group {
			flex-direction: column;
			align-items: stretch;
		}

		.classes-grid {
			grid-template-columns: 1fr;
		}
	}
</style>

<script>
	// Fetch and display classes
	async function fetchClasses() {
		console.log('=== FETCHING CLASSES ===');
		const loading = document.getElementById('loading');
		const error = document.getElementById('error');
		const grid = document.getElementById('classes-grid');
		const noClasses = document.getElementById('no-classes');

		if (loading) loading.style.display = 'block';
		if (error) error.style.display = 'none';
		if (grid) grid.style.display = 'none';
		if (noClasses) noClasses.style.display = 'none';

		try {
			console.log('Fetching from /api/classes.json...');
			const response = await fetch('/api/classes.json');
			console.log('Response status:', response.status, response.statusText);
			console.log('Response headers:', Object.fromEntries(response.headers));

			if (!response.ok) {
				throw new Error('Failed to fetch classes');
			}

			const responseText = await response.text();
			console.log('=== RAW RESPONSE TEXT ===');
			console.log('Response text:', responseText);
			console.log('Response length:', responseText.length);

			const data = JSON.parse(responseText);
			console.log('=== PARSED RESPONSE DATA ===');
			console.log('Full data object:', data);
			console.log('Object keys:', Object.keys(data));
			console.log('Classes array:', data.classes);
			console.log('Classes count:', data.count);
			console.log('Classes length:', data.classes?.length);

			if (loading) loading.style.display = 'none';

			if (data.classes && data.classes.length > 0) {
				console.log(`=== DISPLAYING ${data.classes.length} CLASSES ===`);
				data.classes.forEach((cls, index) => {
					console.log(`Class ${index + 1}:`, cls);
				});
				displayClasses(data.classes);
			} else {
				console.log('No classes found in response');
				if (noClasses) noClasses.style.display = 'block';
			}

		} catch (err) {
			console.error('=== ERROR FETCHING CLASSES ===');
			console.error('Error:', err);
			if (loading) loading.style.display = 'none';
			if (error) error.style.display = 'block';
		}
	}

	function displayClasses(classes: any[]) {
		const grid = document.getElementById('classes-grid');
		if (!grid) return;

		grid.innerHTML = '';
		grid.style.display = 'grid';

		classes.forEach((classItem: any) => {
			const card = document.createElement('div');
			card.className = 'class-card';

			card.innerHTML = `
				${classItem.imageUrl
					? `<img src="${classItem.imageUrl}" alt="${classItem.name}" class="class-image" />`
					: `<div class="class-image-placeholder">ðŸŽ¨</div>`
				}
				<div class="class-content">
					<h3 class="class-title">${classItem.name}</h3>
					<p class="class-description">${classItem.description || 'No description available'}</p>
					<div class="class-footer">
						<div class="class-price">$${classItem.price}</div>
						<button class="book-btn" data-class-id="${classItem.id}">Book Now</button>
					</div>
				</div>
			`;

			grid.appendChild(card);
		});

		// Add click handlers for book buttons
		document.querySelectorAll('.book-btn').forEach(btn => {
			btn.addEventListener('click', (e) => {
				const target = e.target as HTMLElement;
				const classId = target.dataset.classId;
				// Redirect to booking page or open Square checkout
				// This will be implemented based on your Square setup
				window.location.href = `/booking?class=${classId}`;
			});
		});
	}

	// Initialize on page load
	document.addEventListener('DOMContentLoaded', () => {
		fetchClasses();

		// Refresh button
		const refreshBtn = document.getElementById('refresh-btn');
		if (refreshBtn) {
			refreshBtn.addEventListener('click', fetchClasses);
		}

		// Retry button
		const retryBtn = document.getElementById('retry-btn');
		if (retryBtn) {
			retryBtn.addEventListener('click', fetchClasses);
		}

		// Filter handlers (basic implementation)
		const dateFilter = document.getElementById('date-filter');
		if (dateFilter) {
			dateFilter.addEventListener('change', fetchClasses);
		}
	});
</script>
