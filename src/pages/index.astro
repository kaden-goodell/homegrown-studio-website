---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Homegrown Studio - Creative Craft Classes & Parties">
	<Header />

	<main>
		<!-- Hero Section -->
		<section class="hero">
			<div class="container">
				<div class="hero-content">
					<h1>Welcome to Homegrown Studio</h1>
					<p class="hero-subtitle">
						Your creative space for crafting, learning, and celebrating together.
						Join us for inspiring classes and unforgettable craft parties!
					</p>
					<div class="hero-buttons">
						<a href="/booking" class="button button-primary">Book a Class</a>
						<a href="/about" class="button button-secondary">Learn More</a>
					</div>
				</div>
			</div>
		</section>

		<!-- Featured Section -->
		<section class="featured">
			<div class="container">
				<h2>What We Offer</h2>
				<div class="features-grid">
					<div class="feature-card">
						<div class="feature-icon">ðŸŽ¨</div>
						<h3>Creative Classes</h3>
						<p>Learn new crafting techniques with expert instructors in a welcoming environment.</p>
					</div>
					<div class="feature-card">
						<div class="feature-icon">ðŸŽ‰</div>
						<h3>Private Parties</h3>
						<p>Host birthday parties, team building events, or celebrations with a creative twist.</p>
					</div>
					<div class="feature-card">
						<div class="feature-icon">ðŸŒŸ</div>
						<h3>Open Studio</h3>
						<p>Drop in to work on your own projects with access to all our tools and materials.</p>
					</div>
					<div class="feature-card">
						<div class="feature-icon">ðŸ‘¥</div>
						<h3>Community</h3>
						<p>Connect with fellow crafters and makers in our vibrant creative community.</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Call to Action -->
		<section class="cta">
			<div class="container">
				<h2>Ready to Get Creative?</h2>
				<p>Browse our upcoming classes and events, or book a private party today!</p>
				<a href="/booking" class="button">Explore Classes & Events</a>
			</div>
		</section>
	</main>

	<Footer />
</Layout>

<style>
	.hero {
		background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
		color: white;
		padding: var(--spacing-xl) 0;
		text-align: center;
	}

	.hero-content {
		max-width: 800px;
		margin: 0 auto;
	}

	.hero h1 {
		font-size: 3rem;
		margin-bottom: var(--spacing-md);
		color: white;
	}

	.hero-subtitle {
		font-size: 1.25rem;
		margin-bottom: var(--spacing-lg);
		color: rgba(255, 255, 255, 0.95);
	}

	.hero-buttons {
		display: flex;
		gap: var(--spacing-md);
		justify-content: center;
		flex-wrap: wrap;
	}

	.button-primary {
		background: white;
		color: var(--color-primary);
	}

	.button-primary:hover {
		background: var(--color-bg-light);
		color: var(--color-primary-dark);
	}

	.button-secondary {
		background: rgba(255, 255, 255, 0.2);
		color: white;
		border: 2px solid white;
	}

	.button-secondary:hover {
		background: rgba(255, 255, 255, 0.3);
		color: white;
	}

	.featured {
		padding: var(--spacing-xl) 0;
	}

	.featured h2 {
		text-align: center;
		font-size: 2.5rem;
		margin-bottom: var(--spacing-lg);
	}

	.features-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: var(--spacing-lg);
	}

	.feature-card {
		text-align: center;
		padding: var(--spacing-md);
		border-radius: 1rem;
		background: var(--color-bg-light);
		transition: transform 0.2s, box-shadow 0.2s;
	}

	.feature-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
	}

	.feature-icon {
		font-size: 3rem;
		margin-bottom: var(--spacing-sm);
	}

	.feature-card h3 {
		color: var(--color-primary);
		margin-bottom: var(--spacing-sm);
	}

	.cta {
		background: var(--color-bg-light);
		padding: var(--spacing-xl) 0;
		text-align: center;
	}

	.cta h2 {
		font-size: 2.5rem;
		margin-bottom: var(--spacing-sm);
	}

	.cta p {
		font-size: 1.25rem;
		color: var(--color-text-light);
		margin-bottom: var(--spacing-lg);
	}

	@media (max-width: 768px) {
		.hero h1 {
			font-size: 2rem;
		}

		.hero-subtitle {
			font-size: 1rem;
		}

		.hero-buttons {
			flex-direction: column;
			align-items: stretch;
		}

		.features-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
