---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export const prerender = true;
---

<Layout
	title="Gallery - Homegrown Studio"
	description="Browse our gallery of craft projects, classes, and events at Homegrown Studio."
>
	<Header />

	<main>
		<!-- Hero Section -->
		<section class="page-hero">
			<div class="container">
				<h1>Our Gallery</h1>
				<p class="subtitle">Explore the amazing projects created by our community</p>
			</div>
		</section>

		<!-- Gallery Section -->
		<section class="gallery-section">
			<div class="container">
				<div class="filter-tabs">
					<button class="filter-btn active" data-filter="all">All Projects</button>
					<button class="filter-btn" data-filter="pottery">Pottery</button>
					<button class="filter-btn" data-filter="painting">Painting</button>
					<button class="filter-btn" data-filter="woodworking">Woodworking</button>
					<button class="filter-btn" data-filter="textiles">Textiles</button>
					<button class="filter-btn" data-filter="events">Events</button>
				</div>

				<div class="gallery-grid">
					<!-- Placeholder Gallery Items -->
					{Array.from({ length: 12 }).map((_, i) => (
						<div class="gallery-item" data-category="pottery">
							<div class="gallery-image-placeholder">
								<span>Project {i + 1}</span>
							</div>
							<div class="gallery-info">
								<h3>Project Title</h3>
								<p class="gallery-category">Category</p>
							</div>
						</div>
					))}
				</div>

				<div class="load-more">
					<button class="button">Load More Projects</button>
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section class="cta-section">
			<div class="container">
				<h2>Want to See Your Work Here?</h2>
				<p>Join one of our classes and create something amazing!</p>
				<a href="/booking" class="button">Browse Classes</a>
			</div>
		</section>
	</main>

	<Footer />
</Layout>

<style>
	.page-hero {
		background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
		color: white;
		padding: var(--spacing-xl) 0;
		text-align: center;
	}

	.page-hero h1 {
		font-size: 3rem;
		margin-bottom: var(--spacing-sm);
		color: white;
	}

	.subtitle {
		font-size: 1.5rem;
		opacity: 0.95;
	}

	.gallery-section {
		padding: var(--spacing-xl) 0;
	}

	.filter-tabs {
		display: flex;
		gap: var(--spacing-sm);
		margin-bottom: var(--spacing-lg);
		flex-wrap: wrap;
		justify-content: center;
	}

	.filter-btn {
		padding: var(--spacing-xs) var(--spacing-md);
		background: white;
		border: 2px solid var(--color-primary);
		color: var(--color-primary);
		border-radius: 2rem;
		font-weight: 600;
		cursor: pointer;
		transition: all 0.2s;
	}

	.filter-btn:hover,
	.filter-btn.active {
		background: var(--color-primary);
		color: white;
	}

	.gallery-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
		gap: var(--spacing-lg);
		margin-bottom: var(--spacing-lg);
	}

	.gallery-item {
		background: white;
		border-radius: 1rem;
		overflow: hidden;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
		transition: transform 0.2s, box-shadow 0.2s;
		cursor: pointer;
	}

	.gallery-item:hover {
		transform: translateY(-4px);
		box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
	}

	.gallery-image-placeholder {
		width: 100%;
		height: 300px;
		background: var(--color-bg-light);
		display: flex;
		align-items: center;
		justify-content: center;
		color: var(--color-text-light);
		font-size: 1.25rem;
		border: 2px dashed #d1d5db;
	}

	.gallery-info {
		padding: var(--spacing-md);
	}

	.gallery-info h3 {
		font-size: 1.125rem;
		margin-bottom: 0.25rem;
		color: var(--color-text);
	}

	.gallery-category {
		color: var(--color-primary);
		font-weight: 600;
		font-size: 0.875rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.load-more {
		text-align: center;
		margin-top: var(--spacing-lg);
	}

	.cta-section {
		background: var(--color-bg-light);
		padding: var(--spacing-xl) 0;
		text-align: center;
	}

	.cta-section h2 {
		font-size: 2.5rem;
		margin-bottom: var(--spacing-sm);
	}

	.cta-section p {
		font-size: 1.25rem;
		color: var(--color-text-light);
		margin-bottom: var(--spacing-lg);
	}

	@media (max-width: 768px) {
		.page-hero h1 {
			font-size: 2rem;
		}

		.subtitle {
			font-size: 1.125rem;
		}

		.gallery-grid {
			grid-template-columns: 1fr;
		}

		.filter-tabs {
			justify-content: flex-start;
		}
	}
</style>

<script>
	// Simple gallery filtering
	document.addEventListener('DOMContentLoaded', () => {
		const filterBtns = document.querySelectorAll('.filter-btn');
		const galleryItems = document.querySelectorAll('.gallery-item');

		filterBtns.forEach(btn => {
			btn.addEventListener('click', () => {
				// Update active state
				filterBtns.forEach(b => b.classList.remove('active'));
				btn.classList.add('active');

				const filter = btn.dataset.filter;

				// Filter items (in a real app, this would filter based on data-category)
				galleryItems.forEach(item => {
					if (filter === 'all') {
						item.style.display = 'block';
					} else {
						// This is a placeholder - you'd implement actual filtering logic
						item.style.display = 'block';
					}
				});
			});
		});
	});
</script>
