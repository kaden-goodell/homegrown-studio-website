---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export const prerender = true;
---

<Layout
	title="About Us - Homegrown Studio"
	description="Learn about Homegrown Studio, our mission, and our passion for bringing creative crafting experiences to our community."
>
	<Header />

	<main>
		<!-- Hero Section -->
		<section class="page-hero">
			<div class="container">
				<h1>About Homegrown Studio</h1>
				<p class="subtitle">Where creativity meets community</p>
			</div>
		</section>

		<!-- Story Section -->
		<section class="story-section">
			<div class="container">
				<div class="content-grid">
					<div class="text-content">
						<h2>Our Story</h2>
						<p>
							Homegrown Studio was born from a simple idea: everyone deserves a space
							to explore their creativity. What started as a small workshop in our
							garage has grown into a thriving community hub where people of all
							skill levels come together to learn, create, and celebrate.
						</p>
						<p>
							We believe that crafting is more than just making thingsâ€”it's about
							connecting with others, discovering new skills, and finding joy in
							the process. Whether you're a seasoned maker or picking up your first
							paintbrush, you'll find a welcoming home here.
						</p>
					</div>
					<div class="image-placeholder">
						<div class="placeholder-box">
							<span>Studio Photo</span>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Mission Section -->
		<section class="mission-section">
			<div class="container">
				<h2>Our Mission</h2>
				<div class="mission-grid">
					<div class="mission-card">
						<h3>Inspire Creativity</h3>
						<p>
							We provide the tools, techniques, and encouragement to help
							everyone discover their creative potential.
						</p>
					</div>
					<div class="mission-card">
						<h3>Build Community</h3>
						<p>
							Our studio is a gathering place where friendships form and
							creative collaborations flourish.
						</p>
					</div>
					<div class="mission-card">
						<h3>Celebrate Craft</h3>
						<p>
							From traditional techniques to modern innovations, we honor
							the art of making things by hand.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Team Section (placeholder) -->
		<section class="team-section">
			<div class="container">
				<h2>Meet Our Team</h2>
				<p class="section-intro">
					Our talented instructors bring years of experience and endless enthusiasm
					to every class and event.
				</p>
				<div class="team-grid">
					<div class="team-member">
						<div class="member-photo">
							<div class="placeholder-circle">Photo</div>
						</div>
						<h3>Instructor Name</h3>
						<p class="role">Lead Instructor</p>
						<p>Bio information about the instructor and their specialties.</p>
					</div>
					<div class="team-member">
						<div class="member-photo">
							<div class="placeholder-circle">Photo</div>
						</div>
						<h3>Instructor Name</h3>
						<p class="role">Workshop Coordinator</p>
						<p>Bio information about the instructor and their specialties.</p>
					</div>
					<div class="team-member">
						<div class="member-photo">
							<div class="placeholder-circle">Photo</div>
						</div>
						<h3>Instructor Name</h3>
						<p class="role">Events Manager</p>
						<p>Bio information about the instructor and their specialties.</p>
					</div>
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section class="cta-section">
			<div class="container">
				<h2>Ready to Join Us?</h2>
				<p>Book your first class or party and become part of our creative community!</p>
				<a href="/booking" class="button">Explore Classes & Events</a>
			</div>
		</section>
	</main>

	<Footer />
</Layout>

<style>
	.page-hero {
		background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
		color: white;
		padding: var(--spacing-xl) 0;
		text-align: center;
	}

	.page-hero h1 {
		font-size: 3rem;
		margin-bottom: var(--spacing-sm);
		color: white;
	}

	.subtitle {
		font-size: 1.5rem;
		opacity: 0.95;
	}

	.story-section {
		padding: var(--spacing-xl) 0;
	}

	.content-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: var(--spacing-xl);
		align-items: center;
	}

	.text-content h2 {
		color: var(--color-primary);
		margin-bottom: var(--spacing-md);
	}

	.text-content p {
		font-size: 1.125rem;
		line-height: 1.8;
		margin-bottom: var(--spacing-md);
	}

	.image-placeholder {
		height: 100%;
		min-height: 400px;
	}

	.placeholder-box {
		width: 100%;
		height: 100%;
		background: var(--color-bg-light);
		border-radius: 1rem;
		display: flex;
		align-items: center;
		justify-content: center;
		color: var(--color-text-light);
		font-size: 1.5rem;
		border: 2px dashed #d1d5db;
	}

	.mission-section {
		background: var(--color-bg-light);
		padding: var(--spacing-xl) 0;
	}

	.mission-section h2 {
		text-align: center;
		font-size: 2.5rem;
		margin-bottom: var(--spacing-lg);
	}

	.mission-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: var(--spacing-lg);
	}

	.mission-card {
		background: white;
		padding: var(--spacing-lg);
		border-radius: 1rem;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
	}

	.mission-card h3 {
		color: var(--color-primary);
		font-size: 1.5rem;
		margin-bottom: var(--spacing-sm);
	}

	.team-section {
		padding: var(--spacing-xl) 0;
	}

	.team-section h2 {
		text-align: center;
		font-size: 2.5rem;
		margin-bottom: var(--spacing-sm);
	}

	.section-intro {
		text-align: center;
		font-size: 1.125rem;
		color: var(--color-text-light);
		margin-bottom: var(--spacing-lg);
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
	}

	.team-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: var(--spacing-lg);
	}

	.team-member {
		text-align: center;
	}

	.member-photo {
		margin-bottom: var(--spacing-md);
	}

	.placeholder-circle {
		width: 200px;
		height: 200px;
		background: var(--color-bg-light);
		border-radius: 50%;
		margin: 0 auto;
		display: flex;
		align-items: center;
		justify-content: center;
		color: var(--color-text-light);
		border: 2px dashed #d1d5db;
	}

	.team-member h3 {
		font-size: 1.25rem;
		margin-bottom: 0.25rem;
	}

	.role {
		color: var(--color-primary);
		font-weight: 600;
		margin-bottom: var(--spacing-sm);
	}

	.cta-section {
		background: var(--color-bg-light);
		padding: var(--spacing-xl) 0;
		text-align: center;
	}

	.cta-section h2 {
		font-size: 2.5rem;
		margin-bottom: var(--spacing-sm);
	}

	.cta-section p {
		font-size: 1.25rem;
		color: var(--color-text-light);
		margin-bottom: var(--spacing-lg);
	}

	@media (max-width: 768px) {
		.page-hero h1 {
			font-size: 2rem;
		}

		.subtitle {
			font-size: 1.125rem;
		}

		.content-grid {
			grid-template-columns: 1fr;
		}

		.image-placeholder {
			min-height: 300px;
		}

		.mission-grid,
		.team-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
